{% extends 'base.html.twig' %}

{% block title %}Nos catégories{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <h2 class="text-center my-3">Nos Catégories</h2>
            {% for category in categories %}
                {% if category.parent == null %}
            <div class="col-12 my-3">
                <h3>{{ category.name }}</h3>
            </div>
            {% else %}
            <div class="col-4 mb-3">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-8">
                            <div class="card-body h-100 d-flex flex-column justify-content-between">
                                <h4 class="card-title text-center mt-4">{{ category.name }}</h4>
                                <a href="{{ path('categories_category-products', {slug: category.slug}) }}"
                                   class="btn btn-primary stretched-link">Voir les produits</a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <img src="https://picsum.photos/200/300" class="img-fluid rounded-end" alt=".
                            ..">
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            {% endfor %}
        </section>
    </main>

    <a href="{{ path('categories_new') }}">Create new</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <div class="container w-75 mx-auto">
        <h1 class="my-5 text-center">{{ product.name }}</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ product.category.name }}</td>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.stock }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ product.slug }}</td>
            </tr>
            </tbody>
        </table>

        <div class="row">
            <div class="col-md-12 mx-auto mb-3 text-center">
                <a href="{{ path('categories_category-products', {slug: product.category.name }) }}"
                   class="btn btn-primary">Retour à la catégorie {{ product.category.name }}
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mx-auto text-center">
                <a href="{{ path('product_edit', {'slug': product.slug}) }}" class="btn btn-outline-warning">Edit</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mx-auto text-center">
                {{ include('product/_delete_form.html.twig') }}
            </div>
        </div>
    </div>




{% endblock %}
